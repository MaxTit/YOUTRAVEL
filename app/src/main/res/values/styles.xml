<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
    </style>

    <style name="StartTheme" parent="android:Theme.Light.NoTitleBar">
    </style>
    <color name="gray">#666666</color>
    <color name="white">#ffffff</color>
    <color name="blue">#5f98fc</color>
    <color name="gray_light">#888888</color>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontPath">fonts/SegoeSemiBold.ttf</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="TypicalText01">
        <item name="fontPath">fonts/SegoeBold.ttf</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#888888</item>
    </style>
    <style name="TypicalText02">
        <item name="fontPath">fonts/SegoeRegular.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#888888</item>
    </style>
    <style name="TypicalText03">
        <item name="fontPath">fonts/SegoeRegular.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555555</item>
    </style>


        <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
            <item name="android:progressDrawable">@drawable/rating_selector</item>
        </style>



</resources>